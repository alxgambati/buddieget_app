<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit a service</h3>
        <%= simple_form_for @service do |f| %>
          <%= f.input :category, placeholder: 'Change the category' %>
          <%= f.input :description, placeholder: 'Change the description' %>
          <%= f.input :price, placeholder: 'Change the price' %>
          <%= f.input :city, placeholder: 'Change the city' %>
          <%= link_to 'Edit', service_path,  class: "btn btn-primary", style: 'margin-top:15px' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
